<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen_Login"
    android:orientation="vertical"
    android:background="#f7f8f0">
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>
    <LinearLayout
    android:layout_marginTop="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textSize="40dp"
        android:gravity="center"
        android:fontFamily="@font/vollkkorn"
        android:textColor="#545454"
        android:textStyle="bold"/>
    <EditText
            android:id="@+id/txt_user"
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="60dp"
            app:backgroundTint="@null"
            android:layout_gravity="center"
            android:background="@drawable/edittext"
            android:hint="ENTER THE USER OR EMAIL"
            android:gravity="center"/>
        <EditText
            android:id="@+id/txt_pass"
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="60dp"
            app:backgroundTint="@null"
            android:layout_gravity="center"
            android:background="@drawable/edittext"
            android:hint="ENTER THE PASSWORD"
            android:inputType="textPassword"
            android:gravity="center"/>
        <Button
            android:id="@+id/btn_login_home"
            android:layout_marginTop="30dp"
            android:layout_width="180dp"
            android:layout_height="60dp"
            app:backgroundTint="#7f7f7d"
            android:background="@drawable/hcn"
            android:layout_gravity="center"
            android:text="JOIN"
            android:textColor="@color/white"
            android:fontFamily="@font/vollkkorn"
            android:textSize="25dp"
            android:textStyle="bold"
            />
        </LinearLayout>
    <Button
        android:id="@+id/btn_back_login"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/hcn"
        android:fontFamily="@font/vollkkorn"
        android:text="EXIT"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:backgroundTint="#EAC5AF" />


</LinearLayout>